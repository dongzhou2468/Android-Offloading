<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent">
 
    	<!-- method name -->
		<LinearLayout 
			android:orientation="horizontal"
       		android:layout_width="wrap_content" 
       		android:layout_height="wrap_content">
       		
	       <TextView android:id="@+id/modifier"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginLeft="15dp"
	           android:layout_marginTop="15dp"
	           android:textColor="#000000"
	           android:textSize="16sp" />
	       <TextView android:id="@+id/word_native"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="15dp"
	           android:textColor="#FF0000"
	           android:textSize="16sp" />
	       <TextView android:id="@+id/returnType"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="15dp"
	           android:textColor="#000000"
	           android:textSize="16sp" />
	       <TextView android:id="@+id/methodName"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_marginTop="15dp"
	           android:textColor="#000000"
	           android:textSize="16sp"
	           android:textStyle="bold" />
	       <TextView android:id="@+id/param" 
	           	android:layout_width="wrap_content"
	           	android:layout_height="wrap_content" 
	           	android:layout_marginTop="15dp"
	           	android:textColor="#000000"
	           	android:textSize="16sp" />
       </LinearLayout>
       
		<!-- method time -->
       <LinearLayout
			android:orientation="horizontal"
       		android:layout_width="wrap_content" 
       		android:layout_height="wrap_content">
       	
			<TextView android:id="@+id/word_time"
				android:layout_width="wrap_content"
	           	android:layout_height="wrap_content"
	           	android:layout_marginLeft="15dp"
	           	android:layout_marginRight="15dp"
	           	android:layout_marginTop="10dp"
	           	android:layout_marginBottom="10dp"
	           	android:textColor="#D2B48C"
	           	android:textSize="16sp"
	           	android:text="@string/word_time" />
			<TextView android:id="@+id/time" 
	           	android:layout_width="wrap_content"
	           	android:layout_height="wrap_content"
	           	android:layout_marginTop="10dp"
	           	android:layout_marginBottom="10dp"
	           	android:textColor="#000000"
	           	android:textSize="16sp" />
       	
		</LinearLayout> 
		
</LinearLayout>